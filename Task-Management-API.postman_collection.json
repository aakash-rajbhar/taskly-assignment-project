{
  "info": {
    "name": "Task Management API",
    "description": "Complete API documentation for Task Management Application with authentication and CRUD operations",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "1.0.0"
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Signup",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/signup",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "signup"]
            },
            "description": "Create a new user account. Returns 201 on success.\n\nValidation:\n- name: 2-50 characters\n- email: valid email format\n- password: minimum 6 characters"
          },
          "response": []
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            },
            "description": "Login to existing account. Sets HTTP-only cookie with JWT token.\n\nValidation:\n- email: valid email format\n- password: required"
          },
          "response": []
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/auth/logout",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "logout"]
            },
            "description": "Logout current user by clearing the authentication cookie."
          },
          "response": []
        }
      ],
      "description": "Authentication endpoints for user signup, login, and logout"
    },
    {
      "name": "Profile",
      "item": [
        {
          "name": "Get Profile",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/me",
              "host": ["{{baseUrl}}"],
              "path": ["me"]
            },
            "description": "Get current user profile information (requires authentication).\n\nReturns user object without password field."
          },
          "response": []
        },
        {
          "name": "Update Profile",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Updated Name\",\n  \"email\": \"newemail@example.com\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/me",
              "host": ["{{baseUrl}}"],
              "path": ["me"]
            },
            "description": "Update current user profile (requires authentication).\n\nValidation:\n- name: 2-50 characters (optional)\n- email: valid email format (optional)\n- At least one field must be provided\n- Email must be unique"
          },
          "response": []
        }
      ],
      "description": "User profile management endpoints (protected)"
    },
    {
      "name": "Tasks",
      "item": [
        {
          "name": "Create Task",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Complete project documentation\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/tasks",
              "host": ["{{baseUrl}}"],
              "path": ["tasks"]
            },
            "description": "Create a new task for the authenticated user.\n\nValidation:\n- title: 1-200 characters, required\n\nReturns the created task with _id, userId, completed (default: false)"
          },
          "response": []
        },
        {
          "name": "Get All Tasks",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/tasks",
              "host": ["{{baseUrl}}"],
              "path": ["tasks"]
            },
            "description": "Get all tasks for the authenticated user.\n\nReturns array of task objects filtered by userId."
          },
          "response": []
        },
        {
          "name": "Update Task",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Updated task title\",\n  \"completed\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/tasks/:id",
              "host": ["{{baseUrl}}"],
              "path": ["tasks", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "60a7f8b9c9d4a123456789ab",
                  "description": "Task ID"
                }
              ]
            },
            "description": "Update an existing task (requires authentication and task ownership).\n\nValidation:\n- title: 1-200 characters (optional)\n- completed: boolean (optional)\n- At least one field must be provided\n\nReturns 404 if task not found or doesn't belong to user."
          },
          "response": []
        },
        {
          "name": "Delete Task",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/tasks/:id",
              "host": ["{{baseUrl}}"],
              "path": ["tasks", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "60a7f8b9c9d4a123456789ab",
                  "description": "Task ID"
                }
              ]
            },
            "description": "Delete a task (requires authentication and task ownership).\n\nReturns 404 if task not found or doesn't belong to user."
          },
          "response": []
        }
      ],
      "description": "Task CRUD operations (all protected)"
    }
  ],
